overlay InGame/Score
{
	class PanelZone
	size 40.00% 50.00%
	material HautGauche

	element InGame/Score/Title
	{
		class MinigameText
		position 10% 10%
		size 30% 20%
		font_size 16.0
		text Score :
	}
	element InGame/Score/Text
	{
		class MinigameText
		position 40.00% 10.00%
		size 65.0% 10%
		font_size 16.00
		text 0
	}
	element InGame/Score/NbCoupsTitle
	{
		class MinigameText
		position 10% 20%
		size 30% 35%
		font_size 16.0
		text NbCoups :
	}
	element InGame/Score/NbCoupsText
	{
		class MinigameText
		position 40.00% 20.00%
		size 65% 10%
		font_size 16.0
		text 0
	}
}

overlay WinGame
{
	class PanelZone
	position -20% -20%
	size 40% 40%
	align center center
	material Base/Invisible

	element WinGame/Bravo
	{
		class PanelZone
		position 0% 0%
		size 100% 50%
		material Gagne
	}

	element WinGame/Submit
	{
		class MinigameText
		position 0% 50%
		size 100% 50%
		font_size 40.0
		text Soumettre le score
		text_align center
	}
}

